<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainActivity"
            type="com.example.aacpractice.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_activity_viewmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="activity viewmodel로 이동"
            android:onClick="@{mainActivity::moveActivity}"/>

        <Button
            android:id="@+id/btn_fragment_viewmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment viewmodel로 이동"
            android:onClick="@{mainActivity::moveFragment}"/>

    </LinearLayout>
</layout>
